
{{!-- here we will use a dismissing alert from bootstrap --}}
{{#if removedUser}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
    blog has been removed successfully.
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<div class="row">
  <div class="col-6">
    <h2>blogs</h2>
  </div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/adduser" type="button" class="btn btn-primary align-self-center">+ add blog</a>
  </div>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      {{!-- <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col" class="text-end">Action</th> --}}
    </tr>
  </thead>
  <tbody>
    {{!-- now here we will run a loop through all the records of the table and update the table accordingly  --}}

    {{#each rows}} {{!-- this is the syntax for for loop in ejs--}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.first_name}}</td>
      <td>{{this.last_name}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phone}}</td>
      <td class="text-end">
        <a href="/viewuser/{{this.id}}" type="button" class="btn btn-light btn-small">
            <i class="bi bi-eye">View</i>
        </a>
        <a href="/edituser/{{this.id}}" type="button" class="btn btn-light btn-small">
            <i class="bi bi-pencil">Edit</i>
        </a>
        <a href="/{{this.id}}" type="button" class="btn btn-light btn-small">
            <i class="bi bi-person-x">Delete</i>
        </a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>